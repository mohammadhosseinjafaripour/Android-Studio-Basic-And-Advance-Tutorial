<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form2.f2s14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <include
        layout="@layout/title_form2"
        />


    <LinearLayout
        android:padding="@dimen/padding_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider"
            android:paddingBottom="10dp"
            android:layout_marginTop="4dp"
            android:paddingTop="10dp"
            android:textSize="@dimen/font"
            android:textColor="@color/black"
            android:text="14- با توجه به نياز، بودجه خرید و خودروی انتخابی، در انتخاب خودرو كدام مشخصه فني موتور برايتان اهميت بيشتري دارد؟"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/f2s14_errorlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/f2s14_errorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/divider"
                android:text="لطفا یک گزینه را انتخاب کنید"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/f2s14v1">
                <RadioButton
                    android:hint="1"
                    android:id="@+id/f2s14v1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="حجم موتور"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"/>

                <RadioButton
                    android:hint="2"
                    android:id="@+id/f2s14v1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="قدرت موتور (سرعت خودرو)"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"/>
                <RadioButton
                    android:hint="3"
                    android:id="@+id/f2s14v1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="گشتاور موتور(شتاب/ کشش خودرو)"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"/>
            </RadioGroup>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/f2s14vclick_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="مرحله بعد" />
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>


</ScrollView>
