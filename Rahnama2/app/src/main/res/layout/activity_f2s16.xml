<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form2.f2s16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <include
        layout="@layout/title_form2"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_all"
            android:orientation="horizontal">


            <TextView
                android:layout_marginBottom="10dp"
                android:background="@color/divider"
                android:paddingBottom="10dp"
                android:layout_marginTop="4dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/font"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16- با توجه به نياز، بودجه خرید و خودروی انتخابی خود، در نظر دارید سوخت مصرفی خودروي آينده شما كداميك از گزينه‌هاي زير باشد؟"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/f2s16_errorlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/f2s16_errorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/divider"
                android:text="لطفا یک گزینه را انتخاب کنید"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/f2s16v1">
                    <RadioButton
                        android:hint="1"
                        android:id="@+id/f2s16v1_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" فقط بنزين"
                        android:layoutDirection="rtl"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"/>

                    <RadioButton
                        android:hint="2"
                        android:id="@+id/f2s16v1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="دوگانه سوز (بنزين و گاز)"
                        android:layoutDirection="rtl"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"/>
                    <RadioButton
                        android:hint="3"
                        android:id="@+id/f2s16v1_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="گازوئيل(ديزل)"
                        android:layoutDirection="rtl"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"/>
                    <RadioButton
                        android:hint="4"
                        android:id="@+id/f2s16v1_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="هيبريدي (بنزین و الکتریسیته)"
                        android:layoutDirection="rtl"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"/>
                    <RadioButton
                        android:hint="5"
                        android:id="@+id/f2s16v1_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="برقي"
                        android:layoutDirection="rtl"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"/>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/f2s16vclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="مرحله بعد" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</ScrollView>
