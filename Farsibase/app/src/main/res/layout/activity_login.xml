<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_all"
    tools:context="ir.farsibase.Login">




    <EditText
        android:id="@+id/user_"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableRight="@drawable/user"
        android:inputType="textPersonName"
        android:hint="نام کاربری"
        android:textDirection="ltr"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="137dp" />

    <EditText
        android:id="@+id/pass_"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textDirection="ltr"
        android:drawableRight="@drawable/locked"
        android:inputType="textPassword"
        android:visibility="visible"
        android:hint="گذرواژه"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/login_pass_click"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ورود"
        android:textSize="18dp"
        android:textColor="#ffff"
        android:background="@drawable/flat_selector"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.98"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/pass_"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
