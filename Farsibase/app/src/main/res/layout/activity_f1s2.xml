<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="ir.farsibase.f1s2">

    <LinearLayout
        android:padding="@dimen/padding_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/f1s2v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nameandfamily2"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/f1s2v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telnum2"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/f1s2v3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/address2" />

        <Button
            android:id="@+id/btnclicks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="مرحله بعد" />


    </LinearLayout>
</ScrollView>
